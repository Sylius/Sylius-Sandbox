{% extends 'SandboxCoreBundle:Frontend:layout.html.twig' %}

{% block content %}

<div class="page-header">
<h1>Newsletter. <small>Dajte nam Vaš meil.</small></h1>
</div>

<div class="formErrors">
{{ form_errors(form) }}
</div>

<form action="{{ path('sylius_newsletter_subscriber_subscribe') }}" method="post" class="form-stacked" novalidate>
    <fieldset>
            <div class="formErrors">
            {{ form_errors(form.email) }}
            </div>
            <div class="clearfix">
            <label for="sylius_newsletter_subscriber_email">Vaš meil:</label>
            <div class="input">
                {{ form_widget(form.email, {'attr': {'class': 'span3', 'placeholder': 'unesite meil...'}}) }}
            </div>
            </div>
    </fieldset>

    {{ form_rest(form) }}

    <input type="submit" class="primary btn" value="prijavi me" />
</form>

{% endblock %}
