{% extends 'SandboxCoreBundle:Frontend:layout.html.twig' %}

{% if app.request.get('order') %}
    {% if app.request.get('order') == 'ASC' %}
        {% set sortOrder = 'DESC' %}
    {% else %}
        {% set sortOrder = 'ASC' %}
    {% endif %}
{% else %}
    {% set sortOrder = 'DESC' %}
{% endif %}

{% block content %}

<ul class="breadcrumb">
  <li><a href="{{ path('sylius_sandbox_core_frontend') }}">Početna</a> <span class="divider">/</span></li>
  <li>Proizvodi</li>
</ul>

<h1>Proizvodi. <small>Lista proizvoda.</small></h1>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "previous page...", 'next_message': "next page..."}) }}
{% endif %}

{% if products %}

    <ul class="tabs">
        <li{% if app.request.get('sort') == 'name' %} class="active"{% endif %}><a href="{{ path('sylius_assortment_product_list', {'sort': 'name', 'order': sortOrder}) }}">Naziv</a></li>
        <li{% if app.request.get('sort') == 'price' %} class="active"{% endif %}><a href="{{ path('sylius_assortment_product_list', {'sort': 'price', 'order': sortOrder}) }}">Cena</a></li>
        <li{% if app.request.get('sort') == 'createdAt' %} class="active"{% endif %}><a href="{{ path('sylius_assortment_product_list', {'sort': 'createdAt', 'order': sortOrder}) }}">Vreme kreiranja</a></li>
    </ul>
    <br /><br /><br />
    {% for product in products %}
        {% include 'SandboxAssortmentBundle:Frontend/Product:single.html.twig' %}
    {% endfor %}
{% else %}
<div class="alert-message info">
  <p><strong>Pažnja.</strong> Nema proizvoda.</p>
</div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "previous page...", 'next_message': "next page..."}) }}
{% endif %}

{% endblock %}
