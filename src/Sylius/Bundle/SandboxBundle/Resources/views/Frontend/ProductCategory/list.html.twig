<h3>Assortment categories.</h3>

{% if categories %}
<ul>
    {% for category in categories %}
        <li><a href="{{ path('sylius_categorizer_category_show', {'alias': catalog.alias, 'slug': category.slug}) }}">{{ category.name }}</a></li>
        {% if category['__children'] is defined %}
            {% include 'SandboxAssortmentBundle:Frontend/ProductCategory:_node.html.twig' %}
        {% endif %}
    {% endfor %}
</ul>
{% else %}
    No categories to display...
{% endif %}
