{% block javascripts %}
{% javascripts
    '@SyliusSandboxBundle/Resources/assets/js/sylius-addressing-zone.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{{ form_errors(form) }}
<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'input-xlarge'}}) }}
    {{ form_row(form.type) }}
    <div class="control-group">
        {{ form_label(form.members) }}
        {% for type in ['country', 'province', 'zone'] %}
            <div id="sylius-addressing-zone-members-{{ type }}" data-prototype="{{ form_widget(form.members.vars.prototypes['sylius_addressing_zone_member_' ~ type])|e }}">
                {% if form.type.get('value') == type %}
                    {% for member in form.members %}
                        {% if member.offsetExists(form.type.get('value')) %}
                            <div class="control-group">
                                <div class="controls">
                                    {{ form_widget(member[form.type.get('value')]) }}
                                    <a href="#" class="btn btn-danger collection-remove-btn"><i class="icon-trash icon-white"></i></a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </div>
        {% endfor %}
        <div class="control-group">
            <div class="controls">
                <a class="btn btn-success collection-add-btn" data-collection="sylius-addressing-zone-members-{{ form.type.get('value') }}">add member</a>
            </div>
        </div>
    </div>
</fieldset>
{{ form_widget(form._token) }}
