{% extends 'SyliusSandboxBundle:Backend:layout.html.twig' %}

{% block javascripts %}
{% javascripts
    '@SyliusSandboxBundle/Resources/assets/js/sylius-addressing-zone.js'
%}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{% block header %}
    <h1>Zone updating <small>Use this form to edit existing zone</small></h1>
{% endblock %}

{% block content %}
<form action="{{ path('sylius_sandbox_backend_zone_update', {'id': zone.id}) }}" method="post" class="form-horizontal">
    {% include 'SyliusSandboxBundle:Backend/Zone:_form.html.twig' %}
    <div class="form-actions">
       <input type="submit" value="save changes" class="btn btn-large btn-primary" />
       &nbsp;
       <a href="{{ path('sylius_sandbox_backend_zone_list') }}" class="btn btn-large">cancel</a>
    </div>
</form>
{% endblock %}
