{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Address updating <small>Use this form to edit existing address</small></h1>
{% endblock %}

{% block content %}
<form action="{{ path('sylius_addressing_backend_address_update', {'id': address.id}) }}" method="post" class="form-horizontal" novalidate>
<fieldset>
    {{ form_row(form.firstname, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.lastname, {'attr': {'class': 'span5'}}) }}
    {{ form_row(form.street, {'attr': {'class': 'span6'}}) }}
    {{ form_row(form.city, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.postcode, {'attr': {'class': 'span2'}}) }}
</fieldset>
    {{ form_rest(form) }}
    <div class="form-actions">
       <input type="submit" value="save changes" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
