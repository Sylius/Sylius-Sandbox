{% extends 'SandboxCoreBundle:Frontend:layout.html.twig' %}

{% block content %}
<div class="page-header">
<h1>Listing paginated posts <small>This action belongs to blogger bundle</small></h1>
</div>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{% if posts|length > 0 %}
    {% for post in posts %}
        {% include 'SandboxBloggerBundle:Frontend/Post:single.html.twig' %}
    {% endfor %}
{% else %}
    <hr />
    <div class="alert alert-info">
        No posts to display.
    </div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{% endblock %}
