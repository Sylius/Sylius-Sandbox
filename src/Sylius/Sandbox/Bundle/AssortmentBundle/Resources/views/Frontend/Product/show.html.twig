{% extends 'SandboxCoreBundle:Frontend:layout.html.twig' %}

{% set form = sylius_cart_form({'product': product}) %}

{% block content %}
<div class="page-header">
<h1>
    Product details page
</h1>
</div>

<div class="row product-container well">
    <div class="span3 photo-container">
        <a class="thumbnail">
            <img src="{{ product.imageWebPath|apply_filter('frontend_medium') }}" alt="product photo" />
        </a>
    </div>
    <div class="span5">
        {% if product.variants|length == 0 %}
            <span class="label label-price label-success pull-right"><strong>Price</strong>: {{ product.price }} &euro;</span>
        {% endif %}
        <h3>{{ product.name }}</h3>
        <p>
            {{ product.description|markdown }}
        </p>
        {% if product.properties|length > 0 %}
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th colspan="2">properties</th>
                </tr>
            </thead>
            <tbody>
                {% for property in product.properties %}
                <tr>
                    <td>{{ property.name }}</td>
                    <td>{{ property.value }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2">properties</th>
        </tr>
    </thead>
    <tbody>
        {% for property in product.properties %}
        <tr>
            <td><strong>{{ property.name }}</strong></td>
            <td>{{ property.value }}</td>
        </tr>
        {% else %}
        <tr>
            <td colspan="2">There are no properties for this product</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% if product.variants|length <= 0 %}
<table class="table table-condensed table-striped">
    <thead>
        <tr>
            <th>variant</th>
            <th>price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <ul class="unstyled">
                    {% for option in product.masterVariant.options %}
                    <li><strong>{{ option.presentation }}</strong>: {{ option.value }}</li>
                    {% endfor %}
                </ul>
            </td>
            <td>{{ product.masterVariant.price }} &euro;</td>
        </tr>
    </tbody>
</table>
{% endif %}
<form action="{{ path('sylius_cart_item_add', {'id': product.id}) }}" method="post">
    {% if product.variants|length > 0 %}
    <table class="table table-condensed table-striped">
        <thead>
            <tr>
                <th></th>
                <th>price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for variant in product.variants %}
            <tr>
                <td>
                    <ul class="unstyled">
                        {% for option in variant.options %}
                        <li><strong>{{ option.presentation }}</strong>: {{ option.value }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <span class="label label-success">{{ variant.price }} &euro;</span>
                </td>
                <td>{{ form_widget(form.variant[loop.index0]) }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
    <div class="pull-left">
        <hr />
        <ol>
            <li>This website is just demonstration of Sylius e-commerce engine.</li>
            <li>All products are examples.</li>
            <li>Orders placed via this shop won't be honored, they're not real.</li>
        </ol>
    </div>
    <div class="pull-right">
    {{ form_row(form.quantity, {'attr': {'class': 'span2 center-text'}, 'empty_value': '1'}) }}
    {{ form_rest(form) }}
    <input type="submit" class="btn btn-success btn-large" value="add to cart">
    </div>
</form>
{% endblock %}
