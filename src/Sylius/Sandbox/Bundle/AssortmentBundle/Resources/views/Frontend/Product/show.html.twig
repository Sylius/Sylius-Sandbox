{% extends 'SandboxCoreBundle:Frontend:layout.html.twig' %}

{% set form = sylius_cart_form({'product': product}) %}

{% block content %}
<div class="page-header">
<h1>
    {{ product.name }} <small> details</small>
    <code>Created at {{ product.createdAt|date('Y-m-d H:i:s') }}.</code>
</h1>
</div>

<div class="well">
{{ product.description|markdown }}
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2">properties</th>
        </tr>
    </thead>
    <tbody>
        {% for property in product.properties %}
        <tr>
            <td><strong>{{ property.name }}</strong></td>
            <td>{{ property.value }}</td>
        </tr>
        {% else %}
        <tr>
            <td colspan="2">There are no properties for this product</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% if product.variants|length <= 0 %}
<table class="table table-condensed table-striped">
    <thead>
        <tr>
            <th>variant</th>
            <th>price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <ul class="unstyled">
                    {% for option in product.masterVariant.options %}
                    <li><strong>{{ option.presentation }}</strong>: {{ option.value }}</li>
                    {% endfor %}
                </ul>
            </td>
            <td>{{ product.masterVariant.price }} &euro;</td>
        </tr>
    </tbody>
</table>
{% endif %}
<form action="{{ path('sylius_cart_item_add', {'id': product.id}) }}" method="post">
    {% if product.variants|length > 0 %}
    <table class="table table-condensed table-striped">
        <thead>
            <tr>
                <th>variant</th>
                <th>price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for variant in product.variants %}
            <tr>
                <td>
                    <ul class="unstyled">
                        {% for option in variant.options %}
                        <li><strong>{{ option.presentation }}</strong>: {{ option.value }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>{{ variant.price }} &euro;</td>
                <td>{{ form_widget(form.variant[loop.index0]) }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
    <div class="pull-right">
    {{ form_row(form.quantity, {'attr': {'class': 'span2 center-text'}, 'empty_value': '1'}) }}
    {{ form_rest(form) }}
    <input type="submit" class="btn btn-success btn-large" value="add to cart">
    </div>
</form>
{% endblock %}
