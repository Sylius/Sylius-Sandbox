{% extends 'SandboxCoreBundle:Frontend:layout.html.twig' %}

{% block content %}
<div class="page-header">
<h1>Products category <small>Paginated products list</small></h1>
</div>

<ul class="breadcrumb">
  <li><a href="{{ path('sylius_sandbox_core_frontend') }}">Sylius</a> <span class="divider">/</span></li>
  <li><a href="{{ path('sylius_assortment_product_list') }}">Products</a> <span class="divider">/</span></li>
  <li><a href="{{ path('sylius_categorizer_category_show', {'alias': catalog.alias, 'id': category.id, 'slug': category.slug}) }}">{{ category.name }}</a></li>
</ul>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{% if products|length > 0 %}
    {% for product in products %}
        {% include 'SandboxAssortmentBundle:Frontend/Product:single.html.twig' %}
    {% endfor %}
{% else %}
<hr />
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'alert.heading.info'|trans({}, 'SandboxCoreBundle') }}.</h4>
    There are no products to display.
</div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}
{% endblock %}
