{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Updating prototype<small> Use the form below edit existing prototype</small></h1>
{% endblock %}

{% block content %}
<form action="{{ path('sylius_assortment_backend_prototype_update', {'id': prototype.id}) }}" method="post" class="form-horizontal" novalidate>
<fieldset>
    {{ form_row(form.name, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.options) }}
    {{ form_row(form.properties) }}
    <hr />
</fieldset>
    {{ form_widget(form._token) }}
    <div class="form-actions">
       <input type="submit" value="save changes" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
