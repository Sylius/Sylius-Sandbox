{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Product properties list</h1>
{% endblock %}

{% block content %}
<div class="well">
<a href="{{ path('sylius_assortment_backend_property_create') }}" class="btn btn-primary">
    <i class="icon-plus icon-white"></i> create property
</a>
</div>

{% if properties|length > 0 %}
    <table class="table">
    <thead>
        <tr>
            <th>#id</th>
            <th>name</th>
            <th>presentation</th>
            <th>creation time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for property in properties %}
        <tr>
            <td>{{ property.id }}</td>
            <td>{{ property.name }}</td>
            <td>{{ property.presentation }}</td>
            <td>{{ property.createdAt|date('Y-m-d H:i:s') }}</td>
            <td>
                <div class="btn-group pull-right">
                    <a href="{{ path('sylius_assortment_backend_property_update', {'id': property.id}) }}" class="btn">
                       <i class="icon-pencil"></i> {{ 'update'|trans({}, 'SandboxCoreBundle') }}
                    </a>
                    <a href="{{ path('sylius_assortment_backend_property_delete', {'id': property.id}) }}" class="btn btn-danger confirmer"
                        data-confirmer-question="{{ 'confirmer.q.property.delete'|trans({}, 'SandboxCoreBundle') }}"
                    >
                        <i class="icon-remove icon-white"></i> {{ 'delete'|trans({}, 'SandboxCoreBundle') }}
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'alert.heading.info'|trans({}, 'SandboxCoreBundle') }}.</h4>
    There are no properties to display.
</div>
{% endif %}
{% endblock %}
