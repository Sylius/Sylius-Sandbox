<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>

    <entity name="Sylius\Sandbox\Bundle\CoreBundle\Entity\Prototype\Prototype" table="sylius_sandbox_assortment_prototype">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <many-to-many field="properties" target-entity="Sylius\Sandbox\Bundle\CoreBundle\Entity\Property\Property">
            <join-table name="sylius_assortment_prototype_property">
                <join-columns>
                    <join-column name="prototype_id" referenced-column-name="id" column-definition="INT NULL" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="property_id" referenced-column-name="id" nullable="false" unique="false" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        <many-to-many field="options" target-entity="Sylius\Sandbox\Bundle\CoreBundle\Entity\Option\Option">
            <join-table name="sylius_assortment_prototype_option">
                <join-columns>
                    <join-column name="prototype_id" referenced-column-name="id" column-definition="INT NULL" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="option_id" referenced-column-name="id" nullable="false" unique="false" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>

</doctrine-mapping>
