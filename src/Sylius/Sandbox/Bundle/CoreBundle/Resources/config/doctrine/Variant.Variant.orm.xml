<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>

    <entity name="Sylius\Sandbox\Bundle\CoreBundle\Entity\Variant\Variant" table="sylius_sandbox_assortment_variant">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="price" column="price" type="decimal" precision="10" scale="2" />
        <field name="onHand" column="on_hand" type="integer" />
        <many-to-one field="product" target-entity="Sylius\Sandbox\Bundle\CoreBundle\Entity\Product">
            <join-column name="product_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-many field="options" target-entity="Sylius\Sandbox\Bundle\CoreBundle\Entity\Option\OptionValue">
            <join-table name="sylius_assortment_variant_option_value">
                <join-columns>
                    <join-column name="variant_id" referenced-column-name="id" column-definition="INT NULL" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="option_value_id" referenced-column-name="id" nullable="false" unique="false" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>

</doctrine-mapping>
