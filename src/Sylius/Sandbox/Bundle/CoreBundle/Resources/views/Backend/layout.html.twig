<!DOCTYPE html>

<html>
    <head>
        <title>{% block title %}{{ 'title.backend'|trans({}, 'SandboxCoreBundle') }}{% endblock %}</title>
        <meta charset="UTF-8">

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        {% block stylesheets %}
        {% stylesheets output='assets/compiled/backend.css'
            '@SandboxCoreBundle/Resources/public/bootstrap/css/bootstrap.min.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% stylesheets output='assets/compiled/backend.less'
            '@SandboxCoreBundle/Resources/public/less/backend.less'
        %}
            <link rel="stylesheet/less" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% javascripts output='assets/compiled/backend.js'
            'http://code.jquery.com/jquery.min.js'
            '@SandboxCoreBundle/Resources/public/bootstrap/js/bootstrap.min.js'
            '@SandboxCoreBundle/Resources/public/js/less-1.1.5.min.js'
            '@SandboxCoreBundle/Resources/public/js/backend.js'

            '@SyliusAssortmentBundle/Resources/assets/js/jquery.sylius-assortment.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock %}
    </head>
    <body>
        <div id="confirmer-modal" class="modal hide fade">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">Ã—</a>
                <h3>{{ 'confirmer.header'|trans({}, 'SandboxCoreBundle') }}</h3>
            </div>
            <div class="modal-body">
                <p class="confirmer-modal-question">{{ 'confirmer.question'|trans({}, 'SandboxCoreBundle') }}</p>
            </div>
            <div class="modal-footer">
                <a class="confirmer-modal-confirm btn btn-primary">{{ 'yes'|trans({}, 'SandboxCoreBundle') }}</a>
                <a class="btn" data-dismiss="modal">{{ 'cancel'|trans({}, 'SandboxCoreBundle') }}</a>
            </div>
        </div>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="brand" href="http://sylius.org">Sylius</a>
                    {{ knp_menu_render('SandboxCoreBundle:Builder:backendMainMenu', {'template': 'SandboxCoreBundle::main_menu.html.twig', 'currentClass': 'active'}) }}
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div id="sidebar" class="span2">
                    <div class="sidebar-nav well">
                    {% block sidebar %}
                        <ul class="nav nav-list">
                            <li class="nav-header">{{ "sidebar.menu.assortment" | trans({}, 'SandboxCoreBundle') }}</li>
                                <li><a href="{{ path('sylius_categorizer_backend_category_create', {'alias': 'assortment'}) }}"><i class="icon-plus-sign"></i> Create category</a></li>
                                <li><a href="{{ path('sylius_categorizer_backend_category_list', {'alias': 'assortment'}) }}"><i class="icon-list-alt"></i> List categories</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('sylius_assortment_backend_product_create') }}"><i class="icon-plus-sign"></i> Create product</a></li>
                                <li><a href="{{ path('sylius_assortment_backend_product_list') }}"><i class="icon-list-alt"></i> List products</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('sylius_assortment_backend_option_create') }}"><i class="icon-plus-sign"></i> Create option</a></li>
                                <li><a href="{{ path('sylius_assortment_backend_option_list') }}"><i class="icon-list-alt"></i> List options</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('sylius_assortment_backend_property_create') }}"><i class="icon-plus-sign"></i> Create property</a></li>
                                <li><a href="{{ path('sylius_assortment_backend_property_list') }}"><i class="icon-list-alt"></i> List properties</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('sylius_assortment_backend_prototype_create') }}"><i class="icon-plus-sign"></i> Create prototype</a></li>
                                <li><a href="{{ path('sylius_assortment_backend_prototype_list') }}"><i class="icon-list-alt"></i> List prototypes</a></li>
                            <li class="nav-header">{{ "sidebar.menu.sales" | trans({}, 'SandboxCoreBundle') }}</li>
                                <li><a href="{{ path('sylius_sales_backend_order_list') }}"><i class="icon-list-alt"></i> List orders</a></li>
                                <li><a href="{{ path('sylius_sales_backend_status_list') }}"><i class="icon-list-alt"></i> Manage order statuses</a></li>
                            <li class="nav-header">{{ "sidebar.menu.blog" | trans({}, 'SandboxCoreBundle') }}</li>
                                <li><a href="{{ path('sylius_categorizer_backend_category_create', {'alias': 'blog'}) }}"><i class="icon-plus-sign"></i> Create category</a></li>
                                <li><a href="{{ path('sylius_categorizer_backend_category_list', {'alias': 'blog'}) }}"><i class="icon-list-alt"></i> List categories</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('sylius_blogger_backend_post_create') }}"><i class="icon-plus-sign"></i> Create post</a></li>
                                <li><a href="{{ path('sylius_blogger_backend_post_list') }}"><i class="icon-list-alt"></i> List posts</a></li>
                            <li class="nav-header">{{ "sidebar.menu.addressing" | trans({}, 'SandboxCoreBundle') }}</li>
                                <li><a href="{{ path('sylius_addressing_backend_address_create') }}"><i class="icon-plus-sign"></i> Create address</a></li>
                                <li><a href="{{ path('sylius_addressing_backend_address_list') }}"><i class="icon-list-alt"></i> List adresses</a></li>
                            <li class="nav-header">{{ "sidebar.menu.administration" | trans({}, 'SandboxCoreBundle') }}</li>
                                <li><a href="{{ path('sylius_sandbox_core_frontend_security_logout') }}" class="last"><i class="icon-off"></i> Logout...</a></li>
                        </ul>
                    {% endblock %}
                    </div>
                </div>
                <div id="content" class="span10">
                    <div id="content-inner">
                    {% block content %}   {% endblock %}
                    </div>
                    <hr>
                    <footer>
                        <p>&copy; <a href="http://Sylius.org">Sylius.org</a>, 2011 - 2012.</p>
                    </footer>
                </div>
            </div>
        </div>
    </body>
</html>
