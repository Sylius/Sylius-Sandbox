<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\Bundle\CartBundle\Entity\Cart" table="sylius_cart">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="value" column="value" type="decimal" precision="10" scale="2" />
        <one-to-many field="items" target-entity="Application\Bundle\CartBundle\Entity\Item" mapped-by="cart">
        	<cascade>
                <cascade-all/>
        	</cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>
