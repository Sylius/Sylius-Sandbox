{% extends 'ApplicationCoreBundle:Frontend:layout.html.twig' %}

{% block content %}

<div class="page-header">
<h1>Blog category. <small>All posts in category "<strong>{{ category.name }}</strong>".</small></h1>
</div>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "previous page...", 'next_message': "next page..."}) }}
{% endif %}

{% if posts %}
    {% for post in posts %}
        {% include 'ApplicationBloggerBundle:Frontend/Post:single.html.twig' %}
    {% endfor %}
{% else %}
<div class="alert-message info">
  <p><strong>Information.</strong> No posts to display.</p>
</div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "previous page...", 'next_message': "next page..."}) }}
{% endif %}

{% endblock %}
